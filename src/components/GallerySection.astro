// src/components/GallerySection.astro
---

<section id="galeria" class="section-narrow gallery">
  <div class="gallery-header fade-in">
    <h5>Galería</h5>
    <h2>Espacios únicos</h2>
  </div>
  <div class="gallery-grid">
    <div class="gallery-item large fade-in" data-delay="0">
      <div class="image-placeholder">
        <img 
          src="/images/fachada2.jpg" 
          alt="Fachada principal del edificio ARO 3"
          loading="eager"
        />
        <div class="image-overlay">
          <span class="image-title">Fachada principal</span>
          <p class="image-subtitle">Vista exterior del edificio histórico</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in" data-delay="0.1">
      <div class="image-placeholder">
        <img 
          src="/images/interior2.jpg" 
          alt="Salón principal con amplios ventanales"
          loading="lazy"
        />
        <div class="image-overlay">
          <span class="image-title">Salón</span>
          <p class="image-subtitle">Amplios espacios llenos de luz natural</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in" data-delay="0.2">
      <div class="image-placeholder">
        <img 
          src="/images/interiorr.jpg" 
          alt="Cocina moderna completamente equipada"
          loading="lazy"
        />
        <div class="image-overlay">
          <span class="image-title">Cocina</span>
          <p class="image-subtitle">Diseño moderno y funcional</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in" data-delay="0.1">
      <div class="image-placeholder">
        <img 
          src="/images/dormitorio.jpg" 
          alt="Dormitorio principal con amplio espacio"
          loading="lazy"
        />
        <div class="image-overlay">
          <span class="image-title">Dormitorio</span>
          <p class="image-subtitle">Confort y elegancia en cada detalle</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in" data-delay="0.2">
      <div class="image-placeholder">
        <img 
          src="/images/terraza.jpg" 
          alt="Terraza con vistas privilegiadas"
          loading="lazy"
        />
        <div class="image-overlay">
          <span class="image-title">Terraza</span>
          <p class="image-subtitle">Espacios exteriores únicos</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section-narrow {
    padding: 8rem 60px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .gallery {
    background: var(--white);
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .gallery-header h5 {
    color: var(--accent);
    margin-bottom: 1.5rem;
    font-size: 1.3rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .gallery-header h2 {
    font-size: 3.8rem;
    color: var(--text-primary);
    margin-bottom: 0;
    font-weight: 300;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 20px;
    grid-auto-rows: minmax(280px, auto);
  }

  /* Primera imagen: grande a la izquierda */
  .gallery-item:nth-child(1) {
    grid-column: span 7;
    grid-row: span 2;
  }

  /* Segunda y tercera: columna derecha arriba */
  .gallery-item:nth-child(2),
  .gallery-item:nth-child(3) {
    grid-column: span 5;
    grid-row: span 1;
  }

  /* Cuarta y quinta: fila inferior */
  .gallery-item:nth-child(4),
  .gallery-item:nth-child(5) {
    grid-column: span 6;
    grid-row: span 1;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    min-height: 280px;
  }

  .gallery-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    background: var(--cream);
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    display: block;
  }

  .gallery-item:hover img {
    transform: scale(1.08);
  }

  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px 25px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
    color: white;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: none;
  }

  .gallery-item:hover .image-overlay {
    opacity: 1;
    transform: translateY(0);
  }

  .image-title {
    display: block;
    font-size: 1.8rem;
    font-weight: 400;
    margin-bottom: 5px;
    color: white;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .image-subtitle {
    font-size: 1.3rem;
    font-weight: 300;
    opacity: 0.95;
    margin: 0;
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  /* Animaciones de entrada */
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .fade-in.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 1024px) {
    .section-narrow {
      padding: 6rem 40px;
    }
    
    .gallery-grid {
      grid-auto-rows: minmax(240px, auto);
    }

    /* Reorganizar para tablet */
    .gallery-item:nth-child(1) {
      grid-column: span 12;
      grid-row: span 1;
    }
    
    .gallery-item:nth-child(2),
    .gallery-item:nth-child(3),
    .gallery-item:nth-child(4),
    .gallery-item:nth-child(5) {
      grid-column: span 6;
      grid-row: span 1;
    }
  }

  @media (max-width: 768px) {
    .section-narrow {
      padding: 5rem 20px;
    }
    
    .gallery-header {
      margin-bottom: 3.5rem;
    }
    
    .gallery-header h2 {
      font-size: 3.2rem;
    }
    
    .gallery-grid {
      grid-template-columns: 1fr;
      grid-auto-rows: minmax(280px, auto);
      gap: 16px;
    }
    
    .gallery-item:nth-child(1),
    .gallery-item:nth-child(2),
    .gallery-item:nth-child(3),
    .gallery-item:nth-child(4),
    .gallery-item:nth-child(5) {
      grid-column: span 1;
      grid-row: span 1;
    }

    .image-title {
      font-size: 1.6rem;
    }
    
    .image-subtitle {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .section-narrow {
      padding: 4rem 16px;
    }

    .gallery-header h2 {
      font-size: 2.8rem;
    }

    .gallery-header h5 {
      font-size: 1.1rem;
    }
    
    .gallery-grid {
      grid-auto-rows: minmax(240px, auto);
      gap: 12px;
    }

    .image-overlay {
      padding: 20px 18px;
    }

    .image-title {
      font-size: 1.5rem;
    }
    
    .image-subtitle {
      font-size: 1.1rem;
    }
  }
</style>

<script>
  // Intersection Observer para animaciones
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.gallery .fade-in');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const delay = parseFloat(entry.target.getAttribute('data-delay') || '0');
          setTimeout(() => {
            entry.target.classList.add('in-view');
          }, delay * 1000);
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    fadeElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>