---

<section id="galeria" class="section-narrow gallery">
  <div class="gallery-header fade-in">
    <h5>Galería</h5>
    <h2>Espacios únicos</h2>
  </div>
  <div class="gallery-grid">
    <div class="gallery-item large fade-in">
      <div class="image-placeholder">
        <div class="image-overlay">
          <span class="image-title">Fachada principal</span>
          <p class="image-subtitle">Vista exterior del edificio histórico</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in">
      <div class="image-placeholder">
        <div class="image-overlay">
          <span class="image-title">Salón</span>
          <p class="image-subtitle">Espacios amplios y luminosos</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in">
      <div class="image-placeholder">
        <div class="image-overlay">
          <span class="image-title">Cocina</span>
          <p class="image-subtitle">Diseño moderno integrado</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in">
      <div class="image-placeholder">
        <div class="image-overlay">
          <span class="image-title">Dormitorio</span>
          <p class="image-subtitle">Confort y elegancia</p>
        </div>
      </div>
    </div>
    <div class="gallery-item fade-in">
      <div class="image-placeholder">
        <div class="image-overlay">
          <span class="image-title">Baño</span>
          <p class="image-subtitle">Calidades premium</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section-narrow {
    padding: 6rem 60px; /* Reducido de 120px */
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery {
    background: var(--white);
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 5rem; /* Reducido de 80px */
  }

  .gallery-header h5 {
    color: var(--accent);
    margin-bottom: 1.5rem;
    font-size: 1.3rem; /* Aumentado */
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .gallery-header h2 {
    font-size: 3.8rem; /* Aumentado */
    color: var(--text-primary);
    margin-bottom: 0;
    font-weight: 300;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    grid-template-rows: repeat(2, 1fr);
    gap: 20px;
    height: 600px;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    background: var(--cream);
    border-radius: 2px;
    transition: all 0.4s ease;
  }

  .gallery-item.large {
    grid-row: span 2;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    position: relative;
    background: linear-gradient(135deg, var(--cream), #f0ede8);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.4s ease;
  }

  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.75));
    padding: 30px 20px 20px;
    color: white;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.4s ease;
  }

  .image-title {
    display: block;
    font-size: 1.6rem; /* Aumentado */
    font-weight: 400;
    margin-bottom: 6px;
    color: white;
  }

  .image-subtitle {
    font-size: 1.4rem; /* Aumentado */
    font-weight: 300;
    opacity: 0.95;
    margin: 0;
    color: white;
  }

  .gallery-item:hover .image-placeholder {
    transform: scale(1.05);
  }

  .gallery-item:hover .image-overlay {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 1024px) {
    .section-narrow {
      padding: 5rem 40px; /* Reducido */
    }
    
    .gallery-grid {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: repeat(3, 200px);
      height: auto;
    }
    
    .gallery-item.large {
      grid-row: span 1;
      grid-column: span 2;
    }

    .gallery-header {
      margin-bottom: 4rem;
    }
  }

  @media (max-width: 768px) {
    .section-narrow {
      padding: 4.5rem 20px; /* Reducido */
    }
    
    .gallery-header {
      margin-bottom: 3.5rem; /* Reducido */
    }
    
    .gallery-header h2 {
      font-size: 3.2rem;
    }
    
    .gallery-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(5, 250px);
    }
    
    .gallery-item.large {
      grid-column: span 1;
    }
  }

  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-rows: repeat(5, 200px);
    }

    .image-title {
      font-size: 1.5rem;
    }

    .image-subtitle {
      font-size: 1.3rem;
    }
  }
</style>

<script>
  // Intersection Observer para animaciones
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.gallery .fade-in');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    fadeElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>