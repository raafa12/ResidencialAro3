<section id="calidades" class="section specifications">
  <div class="container">
    <div class="spec-header fade-in">
      <span class="section-tag light">Calidades Premium</span>
      <h2>Selección cuidadosa de materiales</h2>
      <p>Acabados de las mejores marcas para garantizar durabilidad, elegancia y confort en cada detalle</p>
    </div>
    <div class="specs-grid">
      <div class="spec-category fade-in" data-delay="0.1">
        <div class="category-header">
          <div class="category-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="3" y="4" width="18" height="16" rx="2" stroke="currentColor" stroke-width="1.5"/>
              <path d="M7 8h10M7 12h6M7 16h8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
          </div>
          <h3>Equipamiento</h3>
        </div>
        <div class="spec-list">
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Electrodomésticos</span>
              <span class="spec-value">Bosch integrados<br><small>Horno, vitrocerámica, lavavajillas, frigorífico</small></span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Sanitarios</span>
              <span class="spec-value">Jacob Delafon<br><small>Villeroy & Boch</small></span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Grifería</span>
              <span class="spec-value">Hansgrohe</span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Ascensor</span>
              <span class="spec-value">Orona</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="spec-category fade-in" data-delay="0.2">
        <div class="category-header">
          <div class="category-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 7V17a2 2 0 002 2h14a2 2 0 002-2V7M3 7l9 6 9-6M3 7l2-4h14l2 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Acabados</h3>
        </div>
        <div class="spec-list">
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Pavimentos</span>
              <span class="spec-value">Laminado flotante<br><small>Maderas nobles y gres porcelánico</small></span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Carpintería exterior</span>
              <span class="spec-value">Madera y aluminio<br><small>Original con aluminio en patio</small></span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Carpintería interior</span>
              <span class="spec-value">Madera lacada blanco<br><small>Frentes de armario incluidos</small></span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-content">
              <span class="spec-label">Climatización</span>
              <span class="spec-value">Caldera individual y pre instalación de Aire Acondicionado<br></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Specifications Section - styled like Location */
  .specifications {
    background: var(--primary-darker);
    color: var(--white);
    padding: 120px 0;
    position: relative;
    overflow: hidden;
  }

  .specifications::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--primary-darker) 0%, var(--primary-dark) 100%);
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
    position: relative;
    z-index: 2;
  }

  .spec-header {
    text-align: center;
    margin-bottom: 80px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: 2;
  }

  .section-tag.light {
    color: rgba(255, 255, 255, 0.8);
    position: relative;
    display: block;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 3px;
  }

  .section-tag.light::after {
    content: '';
    position: absolute;
    bottom: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 2px;
    background: var(--white);
  }

  .spec-header h2 {
    font-size: 3.5rem;
    font-weight: 300;
    color: var(--white);
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    letter-spacing: -1px;
  }

  .spec-header p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--white);
    opacity: 0.95;
    font-weight: 300;
    max-width: 700px;
    margin: 0 auto;
  }

  .specs-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    position: relative;
    z-index: 2;
  }

  .spec-category {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 40px 30px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.4s ease;
    opacity: 0;
    transform: translateY(30px);
  }

  .spec-category.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .spec-category:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .category-header {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .category-icon {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    margin-right: 15px;
    transition: all 0.3s ease;
  }

  .spec-category:hover .category-icon {
    background: rgba(255, 255, 255, 0.25);
    transform: scale(1.1);
  }

  .category-header h3 {
    font-size: 1.4rem;
    font-weight: 400;
    color: var(--white);
    margin: 0;
    letter-spacing: 0.5px;
  }

  .spec-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .spec-item {
    padding: 20px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    transition: all 0.3s ease;
  }

  .spec-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .spec-item:hover {
    padding-left: 10px;
  }

  .spec-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .spec-label {
    font-weight: 500;
    color: var(--white);
    font-size: 0.95rem;
    flex: 1;
    min-width: 120px;
  }

  .spec-value {
    font-weight: 300;
    color: rgba(255, 255, 255, 0.9);
    text-align: right;
    font-size: 0.9rem;
    flex: 1;
    line-height: 1.5;
  }

  .spec-value small {
    display: block;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 2px;
  }

  /* Animations */
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .fade-in.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-in[data-delay="0.1"] { transition-delay: 0.1s; }
  .fade-in[data-delay="0.2"] { transition-delay: 0.2s; }

  @media (max-width: 1024px) {
    .specifications {
      padding: 100px 0;
    }

    .container {
      padding: 0 40px;
    }

    .specs-grid {
      gap: 40px;
    }
    
    .spec-category {
      padding: 35px 25px;
    }
  }

  @media (max-width: 768px) {
    .specifications {
      padding: 80px 0;
    }

    .container {
      padding: 0 20px;
    }

    .specs-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .spec-category {
      padding: 30px 20px;
    }

    .spec-header h2 {
      font-size: 2.8rem;
      margin-bottom: 2rem;
    }
    
    .spec-header p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .spec-content {
      flex-direction: column;
      gap: 8px;
    }
    
    .spec-value {
      text-align: left;
    }
    
    .category-header {
      flex-direction: column;
      text-align: center;
      gap: 10px;
    }
    
    .category-icon {
      margin-right: 0;
    }
    
    .spec-header h2 {
      font-size: 2.4rem;
    }
  }
</style>

<script>
  // Intersection Observer for fade-in animations
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.specifications .fade-in');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const delay = entry.target.getAttribute('data-delay') || 0;
          setTimeout(() => {
            entry.target.classList.add('in-view');
          }, delay * 1000);
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    fadeElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>