            <ellipse cx="12" cy="13" rx="3" ry="4" stroke="currentColor" stroke-width="1.5"/>
            <path d="M9 17c0 1.5 1.3 2.5 3 2.5s3-1 3-2.5" stroke="currentColor" stroke-width="1.5"/>
            <path d="M12 19.5V22" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            <circle cx="12" cy="22" r="2" stroke="currentColor" stroke-width="1.5"/>
