    </div>
  </div>
</section>

<style>
  .features-showcase {
    position: relative;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .features-image {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .features-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .features-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .features-content {
    max-width: 800px;
    padding: 0 2rem;
    color: white;
    text-align: center;
  }

  .features-content h2 {
    font-size: 4.8rem;
    font-weight: 300;
    line-height: 1.2;
    margin: 0 0 2rem 0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    letter-spacing: -0.01em;
  }

  .features-content p {
    font-size: 1.8rem;
    line-height: 1.7;
    margin: 0 auto 2rem;
    max-width: 700px;
    font-weight: 300;
  }

  /* Location section styles - copied from ProjectSection */
  .location {
    background: var(--primary-darker);
    color: var(--white);
    padding: 120px 0;
    position: relative;
    overflow: hidden;
  }

  .location::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--primary-darker) 0%, var(--primary-dark) 100%);
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .location-content {
    position: relative;
    z-index: 2;
    text-align: center;
    margin-bottom: 60px;
  }

  .location-header {
    position: relative;
    display: inline-block;
  }

  .location-header h2 {
    font-size: 3.5rem;
    font-weight: 300;
    margin: 0 0 1.5rem 0;
    letter-spacing: -1px;
    color: var(--white);
  }

  .section-tag.light {
    color: rgba(255, 255, 255, 0.8);
    position: relative;
    display: block;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 3px;
  }

  .section-tag.light::after {
    content: '';
    position: absolute;
    bottom: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 2px;
    background: var(--white);
  }

  .location-text {
    max-width: 800px;
    margin: 0 auto;
  }

  .location-text p {
    font-size: 1.15rem;
    line-height: 1.8;
    opacity: 0.95;
    font-weight: 300;
    margin-bottom: 1.5rem;
    color: var(--white);
  }

  .location-text p:last-child {
    margin-bottom: 0;
  }

  .map-container {
    position: relative;
    z-index: 2;
    margin: 60px auto;
    max-width: 1000px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.1);
  }

  .map-container iframe {
    display: block;
    filter: brightness(0.9) contrast(1.1);
  }

  .location-highlights {
    display: flex;
    justify-content: center;
    gap: 60px;
    position: relative;
    z-index: 2;
  }

  .highlight {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .highlight:hover {
    opacity: 1;
    transform: translateY(-2px);
  }

  .highlight-icon {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .highlight:hover .highlight-icon {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .highlight span {
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--white);
    text-align: center;
  }

  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .fade-in.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 1024px) {
    .features-content h2 {
      font-size: 4rem;
    }
    
    .features-content p {
      font-size: 1.6rem;
      max-width: 600px;
    }

    .container {
      padding: 0 40px;
    }
    
    .location-highlights {
      gap: 40px;
    }

    .map-container {
      margin: 50px auto;
    }
  }

  @media (max-width: 768px) {
    .features-image {
      height: 70vh;
      min-height: 500px;
    }
    
    .features-content h2 {
      font-size: 3.2rem;
    }
    
    .features-content p {
      font-size: 1.4rem;
      max-width: 500px;
    }

    .location {
      padding: 80px 0;
    }

    .container {
      padding: 0 20px;
    }
    
    .location-header h2 {
      font-size: 2.8rem;
      margin-bottom: 2rem;
    }
    
    .location-text p {
      font-size: 1rem;
    }
    
    .map-container {
      margin: 40px auto;
    }

    .map-container iframe {
      height: 350px;
    }
    
    .location-highlights {
      flex-direction: column;
      gap: 30px;
    }
  }

  @media (max-width: 480px) {
    .features-image {
      min-height: 400px;
    }
    
    .features-content h2 {
      font-size: 2.6rem;
      margin-bottom: 1.5rem;
    }
    
    .features-content p {
      font-size: 1.2rem;
      max-width: 100%;
    }
    
    .location-header h2 {
      font-size: 2.4rem;
    }

    .map-container {
      margin: 30px auto;
      border-radius: 8px;
    }

    .map-container iframe {
      height: 300px;
    }
  }
</style>

<script>
  // Intersection Observer for fade-in animations
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const delay = entry.target.getAttribute('data-delay') || 0;
          setTimeout(() => {
            entry.target.classList.add('in-view');
          }, delay * 1000);
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    fadeElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>