<section id="contacto" class="section contact">
  <div class="contact-container">
    <div class="contact-header fade-in">
      <span class="section-tag">CONTACTO</span>
      <p class="contact-intro">Estamos a su disposición para resolver cualquier consulta sobre el proyecto</p>
    </div>
    
    <div class="contact-grid">
      <div class="contact-card fade-in" data-delay="0.1">
        <div class="card-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" stroke="currentColor" stroke-width="1.5"/>
            <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="1.5"/>
          </svg>
        </div>
        <h3>Ubicación</h3>
        <div class="card-content">
          <p>Calle Aro 3</p>
          <p>39740 Santoña</p>
          <p>Cantabria, España</p>
        </div>
        <a href="https://maps.google.com/?q=Calle+Aro+3+Santoña" target="_blank" rel="noopener noreferrer" class="card-link">
          Ver en mapa
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
      
      <div class="contact-card fade-in" data-delay="0.2">
        <div class="card-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>Promotor</h3>
        <div class="card-content">
          <p class="company-name">Desarrollos Singulares<br>del Norte, S.L.</p>
        </div>
      </div>
      
      <div class="contact-card fade-in" data-delay="0.3">
        <div class="card-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="1.5"/>
            <path d="M3 9h18M9 21V9" stroke="currentColor" stroke-width="1.5"/>
          </svg>
        </div>
        <h3>Proyecto</h3>
        <div class="card-content">
          <p>8 Viviendas exclusivas</p>
          <p>2 Locales Comerciales</p>
          <p>Rehabilitación integral</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: linear-gradient(to bottom, var(--white) 0%, var(--light) 100%);
    padding: 120px 0;
    position: relative;
  }

  .contact::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(to right, transparent, var(--border), transparent);
  }

  .contact-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 80px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-tag {
    display: inline-block;
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: var(--primary);
    margin-bottom: 15px;
    position: relative;
  }

  .section-tag::after {
    content: '';
    position: absolute;
    bottom: -12px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 2px;
    background: var(--primary);
  }

  .contact-header h2 {
    font-size: 3.8rem;
    font-weight: 300;
    color: var(--text-primary);
    margin: 20px 0 20px 0;
    letter-spacing: -1px;
  }

  .contact-intro {
    font-size: 1.15rem;
    line-height: 1.7;
    color: var(--text-secondary);
    font-weight: 300;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-card {
    background: var(--white);
    border-radius: 12px;
    padding: 45px 35px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid var(--border);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .contact-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 103, 144, 0.15);
    border-color: var(--primary);
  }

  .contact-card:hover::before {
    transform: scaleX(1);
  }

  .card-icon {
    width: 70px;
    height: 70px;
    background: var(--light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    margin: 0 auto 25px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .contact-card:hover .card-icon {
    background: var(--primary);
    color: var(--white);
    transform: scale(1.1) rotate(5deg);
  }

  .contact-card h3 {
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--text-primary);
    margin: 0 0 20px 0;
    letter-spacing: 0.5px;
  }

  .card-content {
    margin-bottom: 20px;
  }

  .card-content p {
    color: var(--text-secondary);
    font-weight: 300;
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 6px;
  }

  .card-content p:last-child {
    margin-bottom: 0;
  }

  .company-name {
    font-weight: 400 !important;
    color: var(--text-primary) !important;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--primary);
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 15px;
    transition: all 0.3s ease;
  }

  .card-link:hover {
    gap: 10px;
    color: var(--primary-dark);
  }

  .card-link svg {
    transition: transform 0.3s ease;
  }

  .card-link:hover svg {
    transform: translate(2px, -2px);
  }

  /* Animations */
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .fade-in.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-in[data-delay="0.1"] { transition-delay: 0.1s; }
  .fade-in[data-delay="0.2"] { transition-delay: 0.2s; }
  .fade-in[data-delay="0.3"] { transition-delay: 0.3s; }

  @media (max-width: 1024px) {
    .contact {
      padding: 100px 0;
    }
    
    .contact-container {
      padding: 0 40px;
    }
    
    .contact-grid {
      gap: 30px;
    }

    .contact-card {
      padding: 40px 30px;
    }
  }

  @media (max-width: 768px) {
    .contact {
      padding: 80px 0;
    }
    
    .contact-container {
      padding: 0 20px;
    }
    
    .contact-header {
      margin-bottom: 60px;
    }
    
    .contact-header h2 {
      font-size: 3.2rem;
    }

    .contact-intro {
      font-size: 1rem;
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 25px;
      max-width: 500px;
    }

    .contact-card {
      padding: 35px 25px;
    }
  }

  @media (max-width: 480px) {
    .contact-header h2 {
      font-size: 2.8rem;
    }

    .card-content p {
      font-size: 0.95rem;
    }
  }
</style>

<script>
  // Intersection Observer para animaciones
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.contact .fade-in');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const delay = parseFloat(entry.target.getAttribute('data-delay') || '0');
          setTimeout(() => {
            entry.target.classList.add('in-view');
          }, delay * 1000);
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    fadeElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>
