  <style>
    .contact {
      background: var(--white);
      padding: 120px 0;
      border-top: 1px solid var(--border);
    }
  
    .contact-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 60px;
    }
  
    .contact-header {
      text-align: center;
      margin-bottom: 80px;
    }
  
    .contact-header h5 {
      color: var(--accent);
      margin-bottom: 1.5rem;
      font-size: 0.9rem;
      font-weight: 500;
      letter-spacing: 0.2em;
    }
  
    .contact-header h2 {
      font-size: 2.4rem;
      font-weight: 300;
      color: var(--text-primary);
      margin-bottom: 0;
      letter-spacing: -1px;
    }
  
    .contact-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 80px;
      max-width: 1000px;
      margin: 0 auto;
    }
  
    .contact-item {
      text-align: center;
    }
  
    .contact-item h6 {
      font-size: 0.85rem;
      font-weight: 500;
      color: var(--text-primary);
      margin-bottom: 25px;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }
  
    .contact-details p {
      color: var(--text-secondary);
      font-weight: 300;
      font-size: 0.95rem;
      line-height: 1.6;
      margin-bottom: 8px;
    }
  
    .contact-details p:last-child {
      margin-bottom: 0;
    }
  
    @media (max-width: 1024px) {
      .contact {
        padding: 80px 0;
      }
      
      .contact-content {
        padding: 0 40px;
      }
      
      .contact-grid {
        gap: 60px;
      }
    }
  
    @media (max-width: 768px) {
      .contact {
        padding: 60px 0;
      }
      
      .contact-content {
        padding: 0 20px;
      }
      
      .contact-header {
        margin-bottom: 60px;
      }
      
      .contact-header h2 {
        font-size: 2rem;
      }
      
      .contact-grid {
        grid-template-columns: 1fr;
        gap: 40px;
        max-width: 400px;
      }
    }
  
    @media (max-width: 480px) {
      .contact-details p {
        font-size: 0.9rem;
      }
    }
  </style>
