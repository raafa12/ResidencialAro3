// src/components/Hero.astro
---

<header class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="fade-in">ARO 3</h1>
      <h2 class="fade-in delay-200">Santoña</h2>
      <p class="fade-in delay-400">Un edificio histórico en el corazón de Santoña</p>
      <div class="hero-cta fade-in delay-600">
        <a href="#proyecto" class="btn btn-primary">
          <span>Descubre más</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="btn-arrow">
            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <div class="hero-overlay"></div>
  <div class="hero-background"></div>
</header>

<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 700px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    width: 100%;
    max-width: 1200px;
    padding: 0 2rem;
    margin: 0 auto;
  }

  .hero-text {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 6.4rem;
    font-weight: 300;
    margin-bottom: 1.5rem;
    color: var(--white);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  .hero h2 {
    font-size: 2.8rem;
    font-weight: 300;
    margin-bottom: 2.5rem;
    color: var(--white);
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .hero h2::after {
    display: none;
  }

  .hero p {
    font-size: 2rem;
    margin-bottom: 3rem;
    color: var(--white);
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-cta {
    margin-top: 4rem;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 40, 60, 0.7) 0%,
      rgba(0, 60, 90, 0.5) 50%,
      rgba(0, 80, 120, 0.3) 100%
    );
    z-index: 1;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--primary-darker) url('/assets/hero-bg.jpg') no-repeat center center;
    background-size: cover;
    z-index: 0;
  }

  /* Animation classes */
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .delay-200 { transition-delay: 0.2s; }
  .delay-400 { transition-delay: 0.4s; }
  .delay-600 { transition-delay: 0.6s; }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.2rem 2.4rem;
    font-size: 1.4rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--white);
    background: transparent;
    border: 1px solid var(--white);
    border-radius: 0;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .btn span {
    position: relative;
    z-index: 2;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-arrow {
    width: 20px;
    height: 20px;
    margin-left: 1.2rem;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--white);
    transform: translateX(-100%);
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 1;
  }

  .btn:hover {
    color: var(--primary-darker);
  }

  .btn:hover::before {
    transform: translateX(0);
  }

  .btn:hover .btn-arrow {
    transform: translateX(4px);
  }

  .btn:active {
    transform: translateY(1px);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 600px;
    }

    .hero h1 {
      font-size: 4.8rem;
    }

    .hero h2 {
      font-size: 2.4rem;
    }

    .hero p {
      font-size: 1.8rem;
    }

    .btn {
      padding: 1rem 2rem;
      font-size: 1.3rem;
    }
    
    .btn-arrow {
      width: 18px;
      height: 18px;
      margin-left: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero h1 {
      font-size: 4rem;
    }

    .hero h2 {
      font-size: 2rem;
    }

    .hero p {
      font-size: 1.6rem;
    }
  }
</style>

<script>
  // Add fade-in delays based on CSS custom properties
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in');
    
    fadeElements.forEach((el, index) => {
      const delay = el.getAttribute('data-delay') || (index * 0.1);
      el.style.transitionDelay = `${delay}s`;
    });
  });
</script>
