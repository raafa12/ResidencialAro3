---
// src/components/Hero.astro
---

<header class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <div class="hero-logo-container fade-in">
        <img src="/images/logo.png" alt="ARO 3 Logo" class="hero-logo" />
      </div>
      <div class="hero-kicker fade-in">Residencial</div>
      <h1 class="fade-in delay-200">ARO 3</h1>
      <h2 class="fade-in delay-400">Santoña (Cantabria)</h2>
      <p class="fade-in delay-600">Un edificio histórico en el centro de Santoña, villa emblemática del Cantábrico</p>
      <div class="hero-cta fade-in delay-800">
        <a href="#proyecto" class="btn btn-primary" aria-label="Descubrir más sobre el proyecto ARO 3">
          <span>Descubre más</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="btn-arrow" aria-hidden="true">
            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <div class="hero-overlay"></div>
  <div class="hero-background" role="img" aria-label="Vista del edificio histórico ARO 3 en Santoña"></div>
</header>

<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 700px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    width: 100%;
    max-width: 1200px;
    padding: 0 2rem;
    margin: 0 auto;
  }

  .hero-text {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-kicker {
    font-size: 1.3rem;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: var(--white);
    opacity: 0.85;
    margin-bottom: 1rem;
    font-weight: 400;
  }

  .hero-logo-container {
    margin-bottom: 2.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-logo {
    max-width: 240px;
    height: auto;
    filter: brightness(1.15) drop-shadow(0 4px 20px rgba(0, 0, 0, 0.4));
    opacity: 1;
  }

  .hero h1 {
    font-size: 7.2rem;
    font-weight: 300;
    margin-bottom: 3rem;
    color: var(--white);
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.35);
    letter-spacing: 0.05em;
  }

  .hero h2 {
    font-size: 3.2rem;
    font-weight: 300;
    margin-bottom: 4rem;
    color: var(--white);
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
  }

  .hero h2::after {
    display: none;
  }

  .hero p {
    font-size: 2.2rem;
    margin-bottom: 3rem;
    color: var(--white);
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .hero-cta {
    margin-top: 3rem;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 40, 60, 0.7) 0%,
      rgba(0, 60, 90, 0.5) 50%,
      rgba(0, 80, 120, 0.3) 100%
    );
    z-index: 1;
  }

  .hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--primary-darker) url('/assets/hero-bg.jpg') no-repeat;
  background-size: 120%;        /* zoom ligero para escritorio */
  background-position: right center; /* enfoca a la derecha */
  z-index: 0;
}

/* Tablets */
@media (max-width: 1024px) {
  .hero-background {
    background-size: 130%;          /* un poco más de zoom */
    background-position: right 20% center; /* mueve un poco más a la derecha */
  }
}

/* Móviles */
@media (max-width: 600px) {
  .hero-background {
    background-size: 150%;          /* más zoom para pantallas pequeñas */
    background-position: right 30% center; /* fuerza aún más el encuadre */
  }
}

  /* Animation classes */
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .delay-200 { transition-delay: 0.2s; }
  .delay-400 { transition-delay: 0.4s; }
  .delay-600 { transition-delay: 0.6s; }
  .delay-800 { transition-delay: 0.8s; }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 3rem;
    font-size: 1.6rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--white);
    background: transparent;
    border: 2px solid var(--white);
    border-radius: 0;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .btn span {
    position: relative;
    z-index: 2;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-arrow {
    width: 22px;
    height: 22px;
    margin-left: 1.5rem;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--white);
    transform: translateX(-100%);
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 1;
  }

  .btn:hover {
    color: var(--primary-darker);
  }

  .btn:hover::before {
    transform: translateX(0);
  }

  .btn:hover .btn-arrow {
    transform: translateX(4px);
  }

  .btn:active {
    transform: translateY(1px);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 600px;
    }

    .hero-logo {
      max-width: 200px;
    }

    .hero-logo-container {
      margin-bottom: 2rem;
    }

    .hero h1 {
      font-size: 5.2rem;
    }

    .hero h2 {
      font-size: 2.8rem;
    }

    .hero p {
      font-size: 2rem;
    }

    .btn {
      padding: 1.3rem 2.5rem;
      font-size: 1.5rem;
    }
    
    .btn-arrow {
      width: 20px;
      height: 20px;
      margin-left: 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .hero-logo {
      max-width: 160px;
    }

    .hero h1 {
      font-size: 4.4rem;
    }

    .hero h2 {
      font-size: 2.4rem;
    }

    .hero p {
      font-size: 1.8rem;
    }
  }
</style>

<script>
  // Add fade-in animations on load
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.hero .fade-in');
    
    setTimeout(() => {
      fadeElements.forEach((el) => {
        el.classList.add('in-view');
      });
    }, 100);
  });
</script>